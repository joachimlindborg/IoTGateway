<StackPanel xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation">
	<TextBlock TextWrapping="Wrap" Margin="0,5,0,5">Simple task list:</TextBlock>
	<Grid Margin="0,5,0,5">
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="Auto" />
			<ColumnDefinition Width="*" />
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto" />
			<RowDefinition Height="Auto" />
			<RowDefinition Height="Auto" />
		</Grid.RowDefinitions>
		<StackPanel Grid.Column="1" Grid.Row="0">
			<TextBlock TextWrapping="Wrap">Unchecked</TextBlock>
		</StackPanel>
		<TextBlock TextWrapping="Wrap" Grid.Column="0" Grid.Row="1" Margin="0,0,5,0">✓</TextBlock>
		<StackPanel Grid.Column="1" Grid.Row="1">
			<TextBlock TextWrapping="Wrap">Checked</TextBlock>
		</StackPanel>
		<TextBlock TextWrapping="Wrap" Grid.Column="0" Grid.Row="2" Margin="0,0,5,0">✓</TextBlock>
		<StackPanel Grid.Column="1" Grid.Row="2">
			<TextBlock TextWrapping="Wrap">Also checked</TextBlock>
		</StackPanel>
	</Grid>
	<TextBlock TextWrapping="Wrap" Margin="0,5,0,5">Nested task list:</TextBlock>
	<Grid Margin="0,5,0,5">
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="Auto" />
			<ColumnDefinition Width="*" />
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto" />
			<RowDefinition Height="Auto" />
			<RowDefinition Height="Auto" />
		</Grid.RowDefinitions>
		<StackPanel Grid.Column="1" Grid.Row="0">
			<TextBlock TextWrapping="Wrap">Unchecked</TextBlock>
		</StackPanel>
		<TextBlock TextWrapping="Wrap" Grid.Column="0" Grid.Row="1" Margin="0,0,5,5">✓</TextBlock>
		<StackPanel Grid.Column="1" Grid.Row="1">
			<TextBlock TextWrapping="Wrap">Checked </TextBlock>
			<Grid Margin="0,5,0,5">
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="Auto" />
					<ColumnDefinition Width="*" />
				</Grid.ColumnDefinitions>
				<Grid.RowDefinitions>
					<RowDefinition Height="Auto" />
					<RowDefinition Height="Auto" />
					<RowDefinition Height="Auto" />
					<RowDefinition Height="Auto" />
				</Grid.RowDefinitions>
				<StackPanel Grid.Column="1" Grid.Row="0">
					<TextBlock TextWrapping="Wrap">Unchecked subitem</TextBlock>
				</StackPanel>
				<TextBlock TextWrapping="Wrap" Grid.Column="0" Grid.Row="1" Margin="0,0,5,5">✓</TextBlock>
				<StackPanel Grid.Column="1" Grid.Row="1">
					<TextBlock TextWrapping="Wrap">Checked subitem </TextBlock>
					<Grid Margin="0,5,0,5">
						<Grid.ColumnDefinitions>
							<ColumnDefinition Width="Auto" />
							<ColumnDefinition Width="*" />
						</Grid.ColumnDefinitions>
						<Grid.RowDefinitions>
							<RowDefinition Height="Auto" />
							<RowDefinition Height="Auto" />
							<RowDefinition Height="Auto" />
							<RowDefinition Height="Auto" />
						</Grid.RowDefinitions>
						<StackPanel Grid.Column="1" Grid.Row="0">
							<TextBlock TextWrapping="Wrap">Unchecked subsubitem</TextBlock>
						</StackPanel>
						<TextBlock TextWrapping="Wrap" Grid.Column="0" Grid.Row="1" Margin="0,0,5,0">✓</TextBlock>
						<StackPanel Grid.Column="1" Grid.Row="1">
							<TextBlock TextWrapping="Wrap">Checked subsubitem</TextBlock>
						</StackPanel>
						<TextBlock TextWrapping="Wrap" Grid.Column="0" Grid.Row="2" Margin="0,0,5,0">✓</TextBlock>
						<StackPanel Grid.Column="1" Grid.Row="2">
							<TextBlock TextWrapping="Wrap">Second checked subsubitem</TextBlock>
						</StackPanel>
						<StackPanel Grid.Column="1" Grid.Row="3">
							<TextBlock TextWrapping="Wrap">Second unchecked subsubitem</TextBlock>
						</StackPanel>
					</Grid>
				</StackPanel>
				<TextBlock TextWrapping="Wrap" Grid.Column="0" Grid.Row="2" Margin="0,0,5,0">✓</TextBlock>
				<StackPanel Grid.Column="1" Grid.Row="2">
					<TextBlock TextWrapping="Wrap">Second checked subitem</TextBlock>
				</StackPanel>
				<StackPanel Grid.Column="1" Grid.Row="3">
					<TextBlock TextWrapping="Wrap">Second unchecked subitem</TextBlock>
				</StackPanel>
			</Grid>
		</StackPanel>
		<TextBlock TextWrapping="Wrap" Grid.Column="0" Grid.Row="2" Margin="0,0,5,0">✓</TextBlock>
		<StackPanel Grid.Column="1" Grid.Row="2">
			<TextBlock TextWrapping="Wrap">Also checked</TextBlock>
		</StackPanel>
	</Grid>
</StackPanel>